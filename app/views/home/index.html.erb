<div class="row">
  <div class="col-10" id="post_list">
        <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: "textarea",
                themes: "modern",
                menu: {
                    table: {title: 'Table', items: 'inserttable tableprops deletetable | cell row column'}
                },
                plugins: [
                    "advlist autolink lists link image charmap preview anchor",
                    "searchreplace visualblocks code fullscreen",
                    "insertdatetime media table contextmenu paste"
                ],
                toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
            });
        </script>
        <!-- commentsment box -->
        <div class="card">
          <h4><i class="fa fa-paper-plane-o"></i> New Post:</h4>
          <%= form_for(@post) do |f|  %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title %>
                <%= f.text_area :content, class: "form-control" %>
              </div>
              <button type="submit" name="say" value="" class="btn btn-primary"><i class="fa fa-reply"></i> Submit</button>
          <% end %>
        </div>
    <% @recent.each do |post| %>
        <div class="card">
          <div class="card-block">
            <h4 class="card-title"><%= link_to post.title, post_path(post)%>
              By:<%= link_to post.user.full_name, user_path(post.user), method: :get %></h4>
            <p class="card-text"><%= post.content.html_safe %></p>
          </div>
          <div class="card-footer">
            <p class="card-text">
              <small class="text-muted">Last updated: <%= post.updated_at %></small>
            </p>
          </div>
        </div>
    <% end %>
  </div>
  <div class="col-2">
    <h1>Trending Posts</h1>
    <% @recent.each do |post| %>
        <div class="card">
          <h5 class="card-title"><%= link_to post.title, post_path(post) %>
            By:<%= link_to post.user.full_name, user_path(post.user), method: :get %></h5>
        </div>
    <% end %>
    <h1>Popular Posts</h1>
    <% @recent.each do |post| %>
        <div class="card">
          <h5 class="card-title"><%= link_to post.title, post_path(post) %>
            By:<%= link_to post.user.full_name, user_path(post.user), method: :get %></h5>
        </div>
    <% end %>
  </div>
</div>