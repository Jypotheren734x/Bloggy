<div class="container">
  <div class="row main">
    <div class="main-login main-center">
      <h5>Register User</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :first_name, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-address-card  fa" aria-hidden="true"></i></span>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-address-card  fa" aria-hidden="true"></i></span>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :age, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-address-card  fa" aria-hidden="true"></i></span>
                <%= f.text_field :age, type: "number", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :username, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                <%= f.text_field :username, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                <%= f.text_field :password, type: "password", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                <%= f.text_field :password_confirmation, type: "password", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group ">
            <%= f.submit "Sign up", class: "btn" %>
          </div>
      <% end %>
    </div>
  </div>
</div>